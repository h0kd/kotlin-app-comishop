<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiente"
    tools:context=".AgregarProductoActivity">

    <LinearLayout
        android:layout_width="363dp"
        android:layout_height="640dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="146dp"
            app:srcCompat="@drawable/logo" />

        <EditText
            android:id="@+id/field_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="ingrese id"
            android:inputType="text" />

        <EditText
            android:id="@+id/field_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="ingrese nombre"
            android:inputType="text" />

        <EditText
            android:id="@+id/field_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="ingrese descripcion"
            android:inputType="text" />

        <EditText
            android:id="@+id/field_precio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="ingrese Precio"
            android:inputType="text" />

        <EditText
            android:id="@+id/field_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="ingrese url"
            android:inputType="text" />

        <Button
            android:id="@+id/boton_insertar_producto"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:backgroundTint="#3498DB"
            android:text="Agregar " />

        <Button
            android:id="@+id/boton_volver_admin2"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:backgroundTint="#3498DB"
            android:text="volver" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>